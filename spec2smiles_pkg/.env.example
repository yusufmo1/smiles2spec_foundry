# SPEC2SMILES Pipeline Configuration
# Copy this file to .env and modify as needed

# ===========================================
# Paths (relative to project root)
# ===========================================
SPEC2SMILES_DATA_INPUT_DIR=data/input
SPEC2SMILES_DATA_OUTPUT_DIR=data/output
SPEC2SMILES_DATASET=hpj

# ===========================================
# Spectrum Processing
# ===========================================
SPEC2SMILES_N_BINS=500
SPEC2SMILES_BIN_WIDTH=1.0
SPEC2SMILES_MAX_MZ=500.0
SPEC2SMILES_TRANSFORM=sqrt
SPEC2SMILES_NORMALIZE=true

# ===========================================
# Part A: LightGBM Configuration
# ===========================================
SPEC2SMILES_LGBM_N_ESTIMATORS=1000
SPEC2SMILES_LGBM_NUM_LEAVES=31
SPEC2SMILES_LGBM_LEARNING_RATE=0.05
SPEC2SMILES_LGBM_EARLY_STOPPING_ROUNDS=50

# ===========================================
# Part B: VAE Configuration
# ===========================================
SPEC2SMILES_VAE_LATENT_DIM=128
SPEC2SMILES_VAE_HIDDEN_DIM=256
SPEC2SMILES_VAE_N_LAYERS=2
SPEC2SMILES_VAE_DROPOUT=0.2
SPEC2SMILES_VAE_N_EPOCHS=100
SPEC2SMILES_VAE_BATCH_SIZE=64
SPEC2SMILES_VAE_LEARNING_RATE=0.001

# ===========================================
# Inference
# ===========================================
SPEC2SMILES_N_CANDIDATES=50
SPEC2SMILES_TEMPERATURE=0.7

# ===========================================
# Training
# ===========================================
SPEC2SMILES_TRAIN_RATIO=0.8
SPEC2SMILES_VAL_RATIO=0.1
SPEC2SMILES_TEST_RATIO=0.1
SPEC2SMILES_RANDOM_SEED=42

# ===========================================
# Device
# ===========================================
# Options: cuda, mps, cpu, auto
SPEC2SMILES_DEVICE=auto
